$(document).on('click', '#echo-icon', function () {
  // Fetch Echo Points and Collected Items
  var echoPoints = State.variables.echoPoints || 0;
  var collectedItems = State.variables.collectedItems || 'None';

  // Update Echo Points
  $('#echo-points').text(echoPoints);

  // Update Items Collected
  $('#items-collected').text(collectedItems);

  // Show Modal
  $('#echo-modal').show();
});

// Close Modal with Close Button
$(document).on('click', '.close', function () {
  $('#echo-modal').hide();
});

// Close Modal by Clicking Outside
$(window).on('click', function (event) {
  if (event.target == document.getElementById('echo-modal')) {
    $('#echo-modal').hide();
  }
});

// Check if the audio element already exists
if (!document.getElementById('background-audio')) {
  // Create the audio element
  var audio = document.createElement('audio');
  audio.id = 'background-audio';
  audio.src = 'https://cdn.glitch.global/b6828776-51ed-45dc-a5a6-32096cb11497/ambience-wind.mp3?v=1733016455884';
  audio.loop = true;
  audio.autoplay = true;
  document.body.appendChild(audio); // Add it to the document body
}

$(document).on(':passagerender', function (event) {
  // Stop any previous audio
  var previousAudio = document.getElementById('passage-audio');
  if (previousAudio) {
    previousAudio.pause();
    previousAudio.currentTime = 0; // Reset audio playback
  }

  // Play the new audio if it exists
  var currentAudio = $(event.content).find('audio#passage-audio')[0];
  if (currentAudio) {
    currentAudio.play();
  }
});

$(document).on('click', '#mute-button', function () {
  State.variables.isMuted = !State.variables.isMuted;

  // Toggle mute on all audio elements
  $('audio').each(function () {
    this.muted = State.variables.isMuted;
  });

  // Update the mute button
  $(this).text(State.variables.isMuted ? '🔇' : '🔊');
});

window.displayEnding = function(stars) {
  let starRating = '★'.repeat(stars) + '☆'.repeat(5 - stars);

  return `
    <div class="ending-display">
      <div class="star-rating">${starRating}</div>
    </div>
  `;
}



