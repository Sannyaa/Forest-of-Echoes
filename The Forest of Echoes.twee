  cursor: pointer;
}

/* Modal Header */
.modal h3 {
  margin-top: 0;
  margin-bottom: 5px; /* Reduced space */
}

/* Info Container */
.info-container {
  margin: 0;
  padding: 0;
}

/* Info Row */
.info-row {
  display: flex;
  justify-content: space-between;
  margin: 3px 0; /* Reduced space between rows */
}

/* Info Labels and Values */
.info-label {
  color: rgba(255, 255, 255, 0.8);
}

.info-value {
  color: #fff;
  font-weight: bold;
}

/* Star Rating */
.star-rating {
  font-size: 24px;
  color: gold;
}

/* Ending Badge */
.ending-badge {
  display: inline-block;
  padding: 10px 15px;
  margin-top: 10px;
  border-radius: 5px;
  font-weight: bold;
  text-transform: uppercase;
}

/* Badge colors for different endings */
.ending-badge.best { background-color: #4CAF50; }
.ending-badge.good { background-color: #8BC34A; }
.ending-badge.neutral { background-color: #FFC107; }
.ending-badge.bad { background-color: #FF5722; }
.ending-badge.worst { background-color: #F44336; }

    
.restart{
    background-color:  #5F825F;
    border-radius: 8px;
    padding: 10px;
}
.restart:hover {
    transform: scale(1.05);
}

#mute-button {
  cursor: pointer;
  font-size: 24px;
  margin-left: 10px;
  position: fixed;
  top: 50px;
  right: 10px;
  z-index: 1000;
}